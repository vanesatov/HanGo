<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_gradiente"
    tools:context=".frutas.FrutasFinalActivity">

    <TextView
        android:id="@+id/txtEnhorabuena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Enhorabuena has completado la lección!"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="130dp"/>

    <TextView
        android:id="@+id/txtSubidaNivel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Has subido al nivel 10!"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/txtEnhorabuena"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <ImageView
        android:id="@+id/imgKoala"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/koala_feliz"
        android:contentDescription="Koala feliz"
        app:layout_constraintTop_toBottomOf="@id/txtSubidaNivel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTerminar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Terminar"
        android:textStyle="bold"
        app:backgroundTint="@color/pastel_azul"
        android:textColor="@android:color/black"
        app:cornerRadius="20dp"
        app:strokeWidth="1dp"
        app:strokeColor="#66000000"
        android:layout_marginStart="110dp"
        android:layout_marginEnd="110dp"
        android:padding="12dp"
        android:layout_marginTop="95dp"
        app:layout_constraintTop_toBottomOf="@id/imgKoala"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>